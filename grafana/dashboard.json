{
  "dashboard": {
    "id": null,
    "title": "Smart Incident Predictor - Production Dashboard",
    "tags": ["ml", "anomaly-detection", "sre", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "System Overview",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "avg(aws_ec2_cpuutilization_average{instance_id=\"$instance_id\"})",
            "legendFormat": "CPU Usage",
            "refId": "A"
          },
          {
            "expr": "avg(system_linux_memoryutilization_average{instance_id=\"$instance_id\"})",
            "legendFormat": "Memory Usage",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value"
        }
      },
      {
        "id": 2,
        "title": "Anomaly Risk Score",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "avg(custom_ml_anomalyriskscore{instance_id=\"$instance_id\"})",
            "legendFormat": "Risk Score",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 30},
                {"color": "orange", "value": 70},
                {"color": "red", "value": 90}
              ]
            },
            "mappings": [
              {"options": {"0": {"text": "Normal", "color": "green"}}, "type": "value"},
              {"options": {"50": {"text": "Warning", "color": "yellow"}}, "type": "value"},
              {"options": {"80": {"text": "Critical", "color": "red"}}, "type": "value"}
            ]
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "background"
        }
      },
      {
        "id": 3,
        "title": "CPU Utilization Trend",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "aws_ec2_cpuutilization_average{instance_id=\"$instance_id\"}",
            "legendFormat": "CPU %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        },
        "options": {
          "tooltip": {"mode": "single", "sort": "none"},
          "legend": {"displayMode": "list", "placement": "bottom"}
        }
      },
      {
        "id": 4,
        "title": "Memory Utilization Trend",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "system_linux_memoryutilization_average{instance_id=\"$instance_id\"}",
            "legendFormat": "Memory %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        },
        "options": {
          "tooltip": {"mode": "single", "sort": "none"},
          "legend": {"displayMode": "list", "placement": "bottom"}
        }
      },
      {
        "id": 5,
        "title": "Anomaly Risk Score Timeline",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "custom_ml_anomalyriskscore{instance_id=\"$instance_id\"}",
            "legendFormat": "Risk Score",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 30},
                {"color": "orange", "value": 70},
                {"color": "red", "value": 90}
              ]
            }
          }
        },
        "options": {
          "tooltip": {"mode": "single", "sort": "none"},
          "legend": {"displayMode": "list", "placement": "bottom"}
        }
      },
      {
        "id": 6,
        "title": "Error Rate",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "rate(aws_applicationelb_httpcode_target_5xx_count{instance_id=\"$instance_id\"}[5m])",
            "legendFormat": "5xx Errors",
            "refId": "A"
          },
          {
            "expr": "rate(aws_applicationelb_httpcode_target_4xx_count{instance_id=\"$instance_id\"}[5m])",
            "legendFormat": "4xx Errors",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "min": 0
          }
        },
        "options": {
          "tooltip": {"mode": "single", "sort": "none"},
          "legend": {"displayMode": "list", "placement": "bottom"}
        }
      },
      {
        "id": 7,
        "title": "Response Time",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "aws_applicationelb_response_time_average{instance_id=\"$instance_id\"}",
            "legendFormat": "Response Time",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "min": 0
          }
        },
        "options": {
          "tooltip": {"mode": "single", "sort": "none"},
          "legend": {"displayMode": "list", "placement": "bottom"}
        }
      },
      {
        "id": 8,
        "title": "Network I/O",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "rate(aws_ec2_networkin_average{instance_id=\"$instance_id\"}[5m])",
            "legendFormat": "Network In",
            "refId": "A"
          },
          {
            "expr": "rate(aws_ec2_networkout_average{instance_id=\"$instance_id\"}[5m])",
            "legendFormat": "Network Out",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "Bps",
            "min": 0
          }
        },
        "options": {
          "tooltip": {"mode": "single", "sort": "none"},
          "legend": {"displayMode": "list", "placement": "bottom"}
        }
      },
      {
        "id": 9,
        "title": "Disk Usage",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32},
        "targets": [
          {
            "expr": "system_linux_diskspaceutilization_average{instance_id=\"$instance_id\"}",
            "legendFormat": "Disk Usage %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        },
        "options": {
          "tooltip": {"mode": "single", "sort": "none"},
          "legend": {"displayMode": "list", "placement": "bottom"}
        }
      },
      {
        "id": 10,
        "title": "Alert History",
        "type": "table",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 40},
        "targets": [
          {
            "expr": "custom_ml_alertriskscore{instance_id=\"$instance_id\"}",
            "legendFormat": "{{RiskLevel}} - {{IncidentID}}",
            "refId": "A",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            }
          }
        },
        "options": {
          "showHeader": true,
          "sortBy": [
            {"desc": true, "displayName": "Time"}
          ]
        }
      },
      {
        "id": 11,
        "title": "ML Service Health",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 48},
        "targets": [
          {
            "expr": "custom_ml_mlservicehealth{instance_id=\"$instance_id\"}",
            "legendFormat": "Health Status",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"options": {"0": {"text": "DOWN", "color": "red"}}, "type": "value"},
              {"options": {"1": {"text": "UP", "color": "green"}}, "type": "value"}
            ],
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "auto",
          "colorMode": "background"
        }
      },
      {
        "id": 12,
        "title": "Prediction Accuracy",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 48},
        "targets": [
          {
            "expr": "custom_ml_predictionaccuracy{instance_id=\"$instance_id\"}",
            "legendFormat": "Accuracy",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "green", "value": 85}
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "auto",
          "colorMode": "value"
        }
      },
      {
        "id": 13,
        "title": "Incidents Predicted (24h)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 48},
        "targets": [
          {
            "expr": "increase(custom_ml_alertriskscore_count{instance_id=\"$instance_id\"}[24h])",
            "legendFormat": "Incidents",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0,
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "auto",
          "colorMode": "value"
        }
      },
      {
        "id": 14,
        "title": "False Positive Rate (24h)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 48},
        "targets": [
          {
            "expr": "custom_ml_falsepositiverate{instance_id=\"$instance_id\"}",
            "legendFormat": "False Positive Rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 15},
                {"color": "red", "value": 25}
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "auto",
          "colorMode": "value"
        }
      }
    ],
    "time": {"from": "now-1h", "to": "now"},
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 1,
    "templating": {
      "list": [
        {
          "name": "instance_id",
          "type": "query",
          "datasource": "CloudWatch",
          "query": "aws_ec2_cpuutilization",
          "refresh": 1,
          "includeAll": false,
          "multi": false,
          "allValue": null,
          "current": {
            "selected": false,
            "text": "All",
            "value": "$__all"
          }
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Incident Predictions",
          "datasource": "CloudWatch",
          "enable": true,
          "expr": "custom_ml_alertriskscore{instance_id=\"$instance_id\"} > 70",
          "iconColor": "red",
          "tags": ["incident", "prediction"]
        }
      ]
    }
  }
}
